{
    "Mat1":{
        "Selector":"Random",
        "Ids":["Water"]
    },
    "Radius":20,
    "Diameter":"!mul($Radius, 2)",
    "Shift":{
        "Offset":[0, 0, 0],
        "Body":{
            "Difference":[
                {
                    "Sphere":{
                        "Radius":"$Radius",
                        "Material":"$Mat1"
                    }
                },
                {
                    "Shift":{
                        "Offset":["!sub(0,$Radius)", 0, "!sub(0, $Radius)"],
                        "Body":{
                            "Cuboid":{
                                "Dimensions":["$Diameter", "$Radius", "$Diameter"],
                                "Material":"$Mat1"
                            }
                        }
                    }
                }
            ]
        }
    }
}