{
"HalfHouseLength":"!div($HouseLength,2)",
"HalfHouseWidth":"!div($HouseWidth,2)",
"HalfHouseHeight":"!div($HouseHeight,2)",

"2SideSquared":"!add(!pow($HouseHeight,2),!pow($HalfHouseHeight,2))",
"Hypotenuse":"!sqrt($2SideSquared)",

"Difference":[
    {
        "Shift":{
            "Offset":["!sub(0,$HalfHouseLength)","$HouseHeight","!sub(0,!add($HalfHouseWidth,1))"],
            "Body":{
                "Rotation":{
                    "Axis":"x",
                    "Degrees":45.0,
                    "Body":{
                        "Cuboid":{
                            "Dimensions":["$HouseLength","$Hypotenuse","$Hypotenuse"],
                            "Material":"$RoofMaterial"
                        }
                    }
                }
            }
        }
    },
    {
        "Shift":{
            "Offset":["!sub(0,$HalfHouseLength)",0, "!sub(0,$HalfHouseWidth)"],
            "Body":{
                "Cuboid":{
                    "Dimensions":["$HouseLength","$HouseHeight","$HouseWidth"],
                    "Material":"$RoofMaterial"
                }
            }
        }
    }
]
}