{
    "On":[
        {
            "RoofWidth":"$HouseWidth",
            "RoofHeight":"!div($HouseWidth,2)",
            "RoofLength":"$HouseLength",
            "HalfRoofLength":"!div($RoofLength,2)",
            "HalfRoofWidth":"!div($RoofLength,2)",

            "2SideSquared":"!add(!pow($RoofHeight,2),!pow($HalfRoofWidth,2))",
            "Hypotenuse":"!sqrt($2SideSquared)",

            "Shift":{
                "Offset":["!sub(0,$HalfRoofLength)","$RoofHeight",0],
                "Body":{
                    "Union":[
                        {
                            "Rotation":{
                                "Axis":"x",
                                "Degrees":45.0,
                                "Body":{
                                    "Cuboid":{
                                        "Dimensions":["$RoofLength",1,"$Hypotenuse"],
                                        "Material":"$RoofMaterial"
                                    }
                                }
                            }
                        },
                        {
                            "Rotation":{
                                "Axis":"x",
                                "Degrees":135.0,
                                "Body":{
                                    "Cuboid":{
                                        "Dimensions":["$RoofLength",1,"$Hypotenuse"],
                                        "Material":"$RoofMaterial"
                                    }
                                }
                            }
                        }
                    ]
                }
            }
        },
        {
            "RoomHeight":"$HouseHeight",
            "RoomLength":"$HouseLength",
            "RoomWidth":"$HouseWidth",
            "HalfRoomLength":"!div($RoomLength,2)",
            "HalfRoomWidth":"!div($RoomWidth,2)",

            "Shift":{
                "Offset":["!sub(0,$HalfRoomLength)",0, "!sub(0,$HalfRoomWidth)"],
                "Body":{
                    "Difference":[
                        {
                            "Cuboid":{
                                "Dimensions":["$RoomLength","$RoomHeight","$RoomWidth"],
                                "Material":"$WallMaterial"
                            }
                        },
                        {
                            "InnerLength":"!sub($RoomLength,!mul($WallThickness,2))",
                            "InnerWidth":"!sub($RoomWidth,!mul($WallThickness,2))",

                            "Offset":[
                                ["$WallThickness",1, "$WallThickness"],
                                {
                                    "Cuboid":{
                                        "Dimensions":["$InnerLength","!sub($RoomHeight,2)","$InnerWidth"],
                                        "Material":"$WallMaterial"
                                    }
                                }
                            ]
                            
                        }
                    ]
                }
            }
        }
    ]
}