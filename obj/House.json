{
    "HalfRoofWidth":"!div($HouseWidth,2)",
    "Union":[
        {
            "HalfRoofLength":"!div($HouseLength,2)",

            "2SideSquared":"!mul(!pow($HalfRoofWidth,2), 2)",
            "Hypotenuse":"!sqrt($2SideSquared)",

            "Offset":[
                ["!sub(0,$HalfRoofLength)","$HalfRoofWidth",0],
                {
                    "Union":[
                        {
                            "Rotation":{
                                "Axis":"x",
                                "Degrees":45.0,
                                "Body":{
                                    "Cuboid":{
                                        "Dimensions":["$HouseLength",1,"$Hypotenuse"],
                                        "Material":"$RoofMaterial"
                                    }
                                }
                            }
                        },
                        {
                            "Rotation":{
                                "Axis":"x",
                                "Degrees":135.0,
                                "Body":{
                                    "Cuboid":{
                                        "Dimensions":["$HouseLength",1,"$Hypotenuse"],
                                        "Material":"$RoofMaterial"
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        },
        {
            "Offset":[
                [0, "$HalfRoofWidth", 0],
                {
                    "HalfRoomLength":"!div($HouseLength,2)",
                    "HalfRoomWidth":"!div($HouseWidth,2)",

                    "Offset":[
                        ["!sub(0,$HalfRoomLength)",0, "!sub(0,$HalfRoomWidth)"],
                        {
                            "Difference":[
                                {
                                    "Cuboid":{
                                        "Dimensions":["$HouseLength","$HouseHeight","$HouseWidth"],
                                        "Material":"$WallMaterial"
                                    }
                                },
                                {
                                    "InnerLength":"!sub($HouseLength,!mul($WallThickness,2))",
                                    "InnerWidth":"!sub($HouseWidth,!mul($WallThickness,2))",

                                    "Offset":[
                                        ["$WallThickness",1, "$WallThickness"],
                                        {
                                            "Cuboid":{
                                                "Dimensions":["$InnerLength","!sub($HouseHeight,2)","$InnerWidth"],
                                                "Material":"$WallMaterial"
                                            }
                                        }
                                    ]
                                    
                                }
                            ]
                        }
                    ]

                }
            ]
        }
    ]
}