{
    "StreetLength":25,
    "StreetWidth":10,
    "HouseSize":8,
    "Union":[
        {
            "Label":"Street",
            "Shift":{
                "Offset":["!sub(0, !div($StreetWidth, 2))", -1, 0],
                "Body":{
                    "Cuboid":{
                        "Dimensions":["$StreetWidth", 1, "$StreetLength"],
                        "Material":{
                            "Selector":"Random",
                            "Ids":["Gravel"]
                        }
                    }
                }
            }
        },
        {
            "Label":"Houses Left",
            "Loop":{
                "Var":"iter",
                "Start":0,
                "End":"!div($StreetLength, 10)",
                "Body":{
                    "Shift":{
                        "Offset":["!sub(0,!add(!div($StreetWidth,2), 5))", 0, "!add(!mul($iter, $HouseSize),2)"],
                        "Body":{
                            "If":{
                                "Condition":"!isEqual(!randInt(0,1), 1)",
                                "Body":{
                                    "House":{
                                        "HouseHeight":"!randInt(4,8)",
                                        "HouseLength":"$HouseSize",
                                        "HouseWidth":"$HouseSize",
                                        "WallMaterial":{
                                            "Selector":"Random",
                                            "Ids":["Oak Planks"]
                                        },
                                        "FloorMaterial":{
                                            "Selector":"Random",
                                            "Ids":["Stone"]
                                        },
                                        "RoofMaterial":{
                                            "Selector":"Random",
                                            "Ids":["Bricks"]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    ]
}