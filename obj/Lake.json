{
    "Mat1":{
        "Selector":"Random",
        "Ids":["Water"]
    },
    "Radius":"!div(!add(!pow($Depth,2), !pow($Width, 2)), !mul(2, $Depth))",
    "Diameter":"!mul(2, $Radius)",
    "Difference":[
        {
            "Shift":{
                "Offset":[0, "!sub($Radius, $Depth)", 0],
                "Body":{
                    "Sphere":{
                        "Radius":"$Radius",
                        "Material":"$Mat1"
                    }
                }
            }
        },
        {
            "Shift":{
                "Offset":["!sub(0,$Radius)", 0, "!sub(0, $Radius)"],
                "Body":{
                    "Cuboid":{
                        "Dimensions":["$Diameter", "$Diameter", "$Diameter"],
                        "Material":"$Mat1"
                    }
                }
            }
        }
    ]
}