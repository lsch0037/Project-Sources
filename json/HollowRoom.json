{
    "TwiceWallThickness":"!mul($WallThickness, 2)",
    "RoomSizeInner":"!sub($RoomSize, $TwiceWallThickness)",
    "RoomHeightInner":"!sub($RoomHeight,2)",
    "CeilingHeight":"!sub($RoomHeight, 1)",
    "Union":[
        {
            "Difference":[
                {
                    "Label":"Outer",
                    "Shape":"Cuboid",
                    "Dimensions":["$RoomSize", "$RoomHeight","$RoomSize"],
                    "Material":"$WallMaterial"
                },
                {
                    "Label":"Inner",
                    "Shape":"Cuboid",
                    "Dimensions":["$RoomSizeInner", "$RoomHeightInner","$RoomSizeInner"],
                    "Relative": ["$WallThickness",1,"$WallThickness"],
                    "Material":"$WallMaterial"
                }
            ]
        },
        {
            "Label": "Floor",
            "Shape":"Cuboid",
            "Relative":["$WallThickness",0,"$WallThickness"],
            "Dimensions":["$RoomSizeInner", 1, "$RoomSizeInner"],
            "Material":"$FloorMaterial"
        },
        {
            "Label": "Ceiling",
            "Shape":"Cuboid",
            "Relative":["$WallThickness","$CeilingHeight","$WallThickness"],
            "Dimensions":["$RoomSizeInner", 1, "$RoomSizeInner"],
            "Material":"$CeilingMaterial"
        }       
    ]
}